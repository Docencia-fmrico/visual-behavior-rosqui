    <BehaviorTree ID="BehaviorTree">
        <ReactiveSequence>
            <Fallback>
                <Inverter>
                    <Condition ID="detect_person"/>
                </Inverter>
                <Action ID="turn"/>
            </Fallback>
            <ReactiveSequence>
                <Action ID="percive_person"/>
                <Action ID="follow_person"/>
            </ReactiveSequence>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Condition ID="detect_person"/>
        <Action ID="follow_person"/>
        <Action ID="percive_person"/>
        <Action ID="turn"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

